                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:progress="0"
                android:thumb="@drawable/icon_circle"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="0" />

